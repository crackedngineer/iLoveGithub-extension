{
  "manifest_version": 3,
  "name": "iLoveGithub Extension",
  "version": "1.0.0",
  "description": "A curated collection of magical tools built around GitHub",
  "permissions": [],
  "host_permissions": [
    "https://github.com/*",
    "https://*.github.com/*",
    "https://ilovegithub.oderna.in/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["dist/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/favicon.png",
    "48": "icons/favicon.png",
    "128": "icons/favicon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "styles/*"],
      "matches": ["https://github.com/*"]
    }
  ]
}
